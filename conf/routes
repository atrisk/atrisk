# Routes

# General pages
GET  /                                              HomeController.root

# Login control pages
POST /user/login                                    HomeController.login
POST /user/register                                 HomeController.register
GET  /user/logout                                   HomeController.logout

# Risk management pages
GET  /main                                          RiskController.main
GET  /context                                       RiskController.context
POST /context/scope                                 RiskController.setScope
GET  /context/scope/commercial/{value}              RiskController.setScopeCommercial
GET  /id                                            RiskController.id
GET  /id/asset                                      RiskController.idAsset
POST /id/asset/primary/add                          RiskController.addPrimaryAsset
GET  /id/asset/primary/{id}/delete                  RiskController.deletePrimaryAsset
POST /id/asset/supporting/add                       RiskController.addSupportingAsset
GET  /id/asset/supporting/{id}/delete               RiskController.deleteSupportingAsset
POST /id/asset/supporting/bind                      RiskController.bindToPrimaryAsset
GET  /id/threat                                     RiskController.idThreat
POST /id/threat/add                                 RiskController.addThreat
GET  /id/threat/{id}/delete                         RiskController.deleteThreat
POST /id/threat/bind                                RiskController.bindToAsset
GET  /analysis                                      RiskController.analysis
GET  /evaluation                                    RiskController.evaluation
GET  /treatment                                     RiskController.treatment
GET  /acceptance                                    RiskController.acceptance

# Map static resources from the /app/public folder to the /public path
GET  /public/                                       staticDir:public

# Catch all, respond with 404
*    /*                                             404
