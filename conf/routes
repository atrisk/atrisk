# Routes

# General pages
GET  /                                              HomeController.root

# Login control pages
POST /user/login                                    HomeController.login
POST /user/register                                 HomeController.register
GET  /user/logout                                   HomeController.logout

# Risk management pages
GET  /main                                          RiskController.main
GET  /context                                       RiskController.context
POST /context/criterion/add                         RiskController.addCriterion
GET  /context/criterion/delete/{id}                 RiskController.deleteCriterion
GET  /context/criterion/evaluation/{id}/{value}     RiskController.setCriterionEvaluation
GET  /context/criterion/impact/{id}/{value}         RiskController.setCriterionImpact
GET  /context/criterion/acceptance/{id}/{value}     RiskController.setCriterionAcceptance
POST /context/scope                                 RiskController.setScope
GET  /context/scope/commercial/{value}              RiskController.setScopeCommercial
GET  /id                                            RiskController.id
POST /id/primary-asset/add                          RiskController.addPrimaryAsset
GET  /id/primary-asset/delete/{id}                  RiskController.deletePrimaryAsset
GET  /id/primary-asset/type/info/{id}               RiskController.setPrimaryAssetTypeInfo
GET  /id/primary-asset/type/process/{id}            RiskController.setPrimaryAssetTypeProcess
POST /id/supporting-asset/add                       RiskController.addSupportingAsset
GET  /id/supporting-asset/delete/{id}               RiskController.deleteSupportingAsset
GET  /id/supporting-asset/type/hardware/{id}        RiskController.setSupportingAssetTypeHardware
GET  /id/supporting-asset/type/software/{id}        RiskController.setSupportingAssetTypeSoftware
GET  /id/supporting-asset/type/network/{id}         RiskController.setSupportingAssetTypeNetwork
GET  /id/supporting-asset/type/personnel/{id}       RiskController.setSupportingAssetTypePersonnel
GET  /id/supporting-asset/type/site/{id}            RiskController.setSupportingAssetTypeSite
GET  /id/supporting-asset/type/organization/{id}    RiskController.setSupportingAssetTypeOrganization
GET  /analysis                                      RiskController.analysis
GET  /evaluation                                    RiskController.evaluation
GET  /treatment                                     RiskController.treatment
GET  /acceptance                                    RiskController.acceptance

# Map static resources from the /app/public folder to the /public path
GET  /public/                                       staticDir:public

# Catch all, respond with 404
*    /*                                             404
